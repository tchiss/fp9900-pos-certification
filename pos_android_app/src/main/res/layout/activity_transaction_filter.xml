<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.dspread.pos.ui.transaction.filter.TransactionFilterViewModel" />
    </data>

    <!-- 根布局保持垂直排列 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 标题栏（保持不变） -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:navigationIcon="@mipmap/ic_back"
                app:title="Filter"
                app:titleTextColor="@color/black" />
        </com.google.android.material.appbar.AppBarLayout>

        <!-- 1. 交易日期筛选（用RadioGroup实现单选） -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:text="Transaction Date"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <!-- 核心改动1：LinearLayout替换为RadioGroup（天然支持单选） -->
        <RadioGroup
            android:id="@+id/rgDateFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="33dp"
            android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 今日按钮（默认选中） -->
        <RadioButton
            android:id="@+id/rbToday"
            style="@style/FilterButton"
            android:text="Today"
            android:checked="true"
          />

        <!-- 3天按钮 -->
        <RadioButton
            android:id="@+id/rb3days"
            style="@style/FilterButton"
            android:layout_marginStart="10dp"
            android:text="3days"
            />

        <!-- 全部按钮 -->
        <RadioButton
            android:id="@+id/rbAll"
            style="@style/FilterButton"
            android:layout_marginStart="10dp"
            android:text="All"
          />
    </RadioGroup>

    <!-- 2. 交易类型筛选（同样用RadioGroup实现单选） -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="10dp"
        android:text="Transaction Type"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <!-- 核心改动2：交易类型也用RadioGroup -->
    <RadioGroup
        android:id="@+id/rgTypeFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="33dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 已支付按钮（默认选中） -->
        <RadioButton
            android:id="@+id/rbPaid"
            style="@style/FilterButton"
            android:text="Paid"
            android:textSize="16sp"
            android:checked="true"
          />

        <!-- 已取消按钮 -->
        <RadioButton
            android:id="@+id/rbVoided"
            style="@style/FilterButton"
            android:layout_marginStart="10dp"
            android:text="Voided"
          />

        <!-- 占位View（保持与原布局一致的权重分布） -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1" />
    </RadioGroup>

    <!-- 间隔（将Done按钮推到底部，保持不变） -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Done按钮（保持不变） -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_white_red_stroke"
        android:padding="12dp"
        android:text="Done"
        binding:onClickCommand="@{viewModel.doneCommand}"
        android:textColor="@color/red_color"
        android:textSize="19sp" />

</LinearLayout>
    </layout>