<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.dspread.pos.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:binding="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/keyboard_backend"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter amount"
            android:textColor="#ff030303"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 金额显示区域 -->
        <com.dspread.pos.view.AutoShrinkEditText
            android:id="@+id/txt_amount"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="@{viewModel.amount}"
            android:textColor="#ff030303"
            android:textSize="44sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_title"
            tools:text="$0.00"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <!-- 税额显示 -->
        <TextView
            android:id="@+id/txt_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+$0.00 tax = $88.00"
            android:textColor="#ff818181"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_amount" />

        <!-- 键盘区域 - 使用androidx GridLayout -->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="20dp"
            android:paddingBottom="16dp"
            app:columnCount="3"
            app:rowCount="4"
            app:layout_constraintBottom_toTopOf="@id/btn_next"
            app:layout_constraintTop_toBottomOf="@id/txt_tax">

            <!-- 第一行 -->
            <Button
                android:id="@+id/btn_1"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`1`)}"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`2`)}"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`3`)}"
                android:text="3" />

            <!-- 第二行 -->
            <Button
                android:id="@+id/btn_4"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`4`)}"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`5`)}"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`6`)}"
                android:text="6" />

            <!-- 第三行 -->
            <Button
                android:id="@+id/btn_7"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`7`)}"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`8`)}"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`9`)}"
                android:text="9" />

            <!-- 第四行 -->
            <Button
                android:id="@+id/btn_00"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`00`)}"
                android:text="00" />

            <Button
                android:id="@+id/btn_0"
                style="@style/ModernNumberButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onNumberClick(`0`)}"
                android:text="0" />

            <ImageButton
                android:id="@+id/btn_backspace"
                style="@style/ModernIconButton"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:layout_gravity="fill"
                android:onClick="@{() -> viewModel.onClearClickCommand()}"
                android:src="@mipmap/ic_keyboard_dele" />

        </androidx.gridlayout.widget.GridLayout>
        <Button
            android:id="@+id/btn_next"
            style="@style/ModernConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:enabled="@{viewModel.amountValid}"
            binding:onClickCommand="@{viewModel.onConfirmClickCommand}"
            android:text="Next"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textColor="@color/confirm_button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>